{
	"name": "soundcraft-ui",
	"version": "3.8.0",
	"homepage": "https://github.com/bitfocus/companion-module-soundcraft-ui#readme",
	"main": "dist/index.js",
	"type": "module",
	"scripts": {
		"postinstall": "husky",
		"dev": "run build:main --watch",
		"build": "rimraf dist && yarn build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"lint:raw": "eslint",
		"lint": "yarn lint:raw .",
		"dist": "yarn companion-module-build"
	},
	"author": "Ferdinand Malcher <ferdinand@malcher.media>",
	"contributors": [
		"Christian Himmler <christian@himmlers.de>"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-soundcraft-ui.git"
	},
	"license": "MIT",
	"prettier": "@companion-module/tools/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"run prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"run lint:raw --fix"
		]
	},
	"engines": {
		"node": "^22.2"
	},
	"dependencies": {
		"@companion-module/base": "^1.12.0",
		"bufferutil": "^4.0.7",
		"rxjs": "7.8.1",
		"soundcraft-ui-connection": "^4.0.0",
		"utf-8-validate": "^6.0.3"
	},
	"devDependencies": {
		"@companion-module/tools": "^2.3.0",
		"@types/node": "^18.19.32",
		"eslint": "^9.27.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.2",
		"prettier": "^3.5.3",
		"rimraf": "^6.0.1",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.32.1"
	},
	"packageManager": "yarn@4.9.1"
}
