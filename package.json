{
	"name": "soundcraft-ui",
	"version": "3.0.0",
	"support": {
		"action": true,
		"feedback": true,
		"preset": false
	},
	"main": "dist/index.js",
	"scripts": {
		"prepare": "husky install",
		"dev": "yarn build:main --watch",
		"build": "rimraf dist && yarn build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"lint": "eslint --ext .ts --ext .js --ignore-pattern dist --ignore-pattern pkg ."
	},
	"author": "Ferdinand Malcher <ferdinand@malcher.media>",
	"contributors": [
		"Christian Himmler <christian@himmlers.de>"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-soundcraft-ui.git"
	},
	"license": "MIT",
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,json,md}": [
			"prettier --write",
			"git add"
		],
		"*.{ts}": [
			"yarn lint --fix --",
			"git add"
		]
	},
	"engines": {
		"node": "^14 || ^16"
	},
	"dependencies": {
		"@companion-module/base": "~0.4.7",
		"rxjs": "^6.6.3",
		"soundcraft-ui-connection": "^0.11.0"
	},
	"devDependencies": {
		"@companion-module/tools": "^0.3.2",
		"@typescript-eslint/eslint-plugin": "~2.31.0",
		"@typescript-eslint/parser": "~2.31.0",
		"@types/node": "^12.0.4",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.3",
		"husky": "^3.0.5",
		"lint-staged": "^9.2.5",
		"prettier": "^1.17.1",
		"typescript": "~4.5"
	}
}
